<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Config:etc/system_file.xsd">
    <system>
        <tab id="fds" translate="label" sortOrder="2000">
            <label>Fds</label>
        </tab>
        <section id="superbundle" translate="label" sortOrder="130" showInDefault="1" showInWebsite="1" showInStore="1">
            <class>separator-top</class>
            <label>Superbundle</label>
            <tab>fds</tab>
            <resource>Fds_Superbundle::superbundle_config</resource>
            <group id="general" translate="label" type="text" sortOrder="10" showInDefault="1" showInWebsite="1" showInStore="1">
                <label>General Configuration Superbundle</label>
                <comment>Superbundle module allows to view/menage in the single product page bundleds product with only the single product.
                The single product becomes a Superbundle when its bundles have the attribute Bundled box switched on YES.</comment>
                <field id="enable" translate="label" type="select" sortOrder="1" showInDefault="1" showInWebsite="1" showInStore="1">
                    <label>Module Enable</label>
                    <source_model>Magento\Config\Model\Config\Source\Yesno</source_model>
                </field>
            </group>
        </section>
    </system>
</config>