<layout xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/layout_generic.xsd">
    <container name="root" label="Root">
        <block class="Fds\Yourproduct\Block\Adminhtml\Question\Edit\Tab\RelatedAnswers"
               name="fds_yourproduct_relatedanswers"/>
        <block class="Magento\Backend\Block\Widget\Grid\Serializer" name="relatedanswers_grid_serializer">
            <arguments>
                <argument name="grid_block" xsi:type="string">fds_yourproduct_relatedanswers</argument>
                <argument name="callback" xsi:type="string">getSelectedAnswers</argument>
                <argument name="input_element_name" xsi:type="string">relatedanswers</argument>
                <argument name="reload_param_name" xsi:type="string">answers_related</argument>
            </arguments>
        </block>
    </container>
</layout>
